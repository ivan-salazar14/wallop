{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "sourceMap": true,
        "rootDirs": [
            "src",
            "tests"
        ],
        "baseUrl": "src",
        "paths": {
            "@/tests/*": [
                "../src/test/*"
            ],
            "@/*": [
                "*"
            ]
        }
    },
    "include": [
        "src",
        "tests"
    ],
    "exclude": [
        "./src/tests/",
        "./node_modules/",
        "./dist/"
    ],
}